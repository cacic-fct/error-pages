---
import { errorCodes } from './errorCodes';
interface Props {
	errorCode: number;
}
const { errorCode } = Astro.props;
---

<div class="container">
	<h1>
		{errorCode}
		{errorCodes[errorCode].english}
	</h1>
	<h2>
		{errorCodes[errorCode].portuguese}
	</h2>
	<p class="message">
		{errorCodes[errorCode].description}<sup
			><a
				href=`https://developer.mozilla.org/en-US/docs/Web/HTTP/Status/${errorCode}`
				target="_blank">[â†—]</a
			></sup
		>
	</p>
</div>

<style>
	.container {
		text-align: center;
		padding: 1rem;
	}
	h1,
	h2 {
		margin: 0;
		font-weight: 600;
	}
	.message {
		white-space: pre-wrap;
		line-height: 1.6;
	}

	sup {
		line-height: 0;
		vertical-align: super;
		font-size: 0.6em;
	}

	sup a {
		color: #000;
		text-decoration: none;
	}
	sup a:hover {
		text-decoration: underline;
	}
</style>
